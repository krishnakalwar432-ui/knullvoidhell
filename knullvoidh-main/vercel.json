{
    "buildCommand": "npm run build:client",
    "outputDirectory": "dist/spa",
    "installCommand": "npm install",
    "framework": "vite",
    "rewrites": [
        {
            "source": "/((?!api/).*)",
            "destination": "/index.html"
        }
    ],
    "headers": [
        {
            "source": "/assets/(.*)",
            "headers": [
                {
                    "key": "Cache-Control",
                    "value": "public, max-age=31536000, immutable"
                }
            ]
        }
    ]
}